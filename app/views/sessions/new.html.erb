<body>
    <div class="container login-container">
        <div class="col-sm-12 col-md-4 col-md-offset-4">
            <div class="brand">
                <%= image_tag "levler-mobile.png", class: "brand-logo-login" %>
            </div>
            <% flash.each do |key, value| %>
                <div class="alert alert-<%= key %>"><%= value %></div>
            <% end %>
            <%= form_tag login_path do %>
                <div class="form-group">
                    <%= text_field_tag :email, params[:email], placeholder: "Username", class: "login-field" %>
                </div>
                <div class="form-group">
                    <%= password_field_tag :password, params[:password],placeholder: "Password", class: "login-field" %>
                </div>
                 <div class="action">
                    <%= submit_tag "Log In", class: "btn btn-success center login-submit"%>   
            <% end %>    
        </div>
    </div>
</body>