<body class="dash-body nav-md">
    <div class="container body">
        <div class="main_container">
            <%= render partial: "layouts/left_col", :locals => {active: "Invites"} %>
            <%= render partial: "layouts/nav_bar", :locals => {active: "Invites"} %>
            <div class="right_col">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h4>Invites</h4>
                                    <hr width="20px"/> 
                                </div>
                                <div class="x_content">
                                    <% if @all_invites.empty? %>
                                        <p class="empty-list">No Reviews yet!</p>
                                    <%else%>    
                                   
                                    <div class="table-responsive">
                                        <table class= "table table-striped">
                                            <thead>
                                                <tr class="heading">
                                                    <th class="column-title"> Name</th>
                                                    <th class="column-title"> Phone Number</th>
                                                    <th class="column-title"> User</th>
                                                    <th class="column-title"> Invite Create Time</th>
                                                    <th class="column-title"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% @all_invites.each do |a| %>
                                                <tr class="even pointer" ASC>
                                                    <td class=" "><%= a.name %></td>
                                                    <td class=" "><%= a.phone %></td>
                                                    <td class=" "><%= a.user.first_name + " " + a.user.last_name %></td>
                                                    <td class=" "><%= a.created_at.to_date %></td>
                                                    <td></td>
                                                </tr>
                                                <% end %>
                                            </tbody>
                                        </table>
                                    <div>
                                    <%end%>
                                <div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>